{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "yarn biome check --write --unsafe": "ask",
      "biome check --write --unsafe": "ask",
      "yarn type-check": "allow",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git remote*": "allow",
      "git fetch*": "allow",
      "find*": "allow",
      "rg*": "allow",
      "yarn*": "allow",
      "npx tsc --noEmit": "allow",
      "npx biome*": "allow",
      "ls*": "allow",
      "pwd": "allow",
      "cd": "allow",
      "grep*": "allow",
      "gh search*": "allow",
      "gh issue view*": "allow",
      "rm": "deny",
      "git rm*": "ask"
    },
    "webfetch": "ask"
  },
  "tools": {
    "todowrite": true,
    "todoread": true,
    "grep": true,
    "read": true,
    "lsp": true,
    "skill": true,
    "bash": true,
    "list": true,
    "glob": true
  },
  "plugin": [
    "oh-my-opencode"
  ]
}
